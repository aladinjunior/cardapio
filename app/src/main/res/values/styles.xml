<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/orange</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">30dp</item>

    </style>

    <style name="ToolbarStyleTitle">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextViewCell">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TimeRequiredButton">

        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="SnackCellPrice" parent="TimeRequiredButton">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="AddToOrderButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">1.4dp</item>
        <item name="strokeColor">@color/black_lighter</item>
        <item name="fontFamily">@font/bergentext_semibold</item>

    </style>
    
    
    
</resources>